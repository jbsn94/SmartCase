<div class ="container-fluid">
  <center>
      <% if notice %>
        <center><div class="alert text-success" role="alert"><p id="notice"><%= notice %></p></div></center>
      <% end %>
    <div class="panel panel-green">
      <div class="panel-heading MyFont"><h4>Lista de Usuários</h4></div>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Tipo</th>
          <th colspan="3"><center><%= (session[:user_tipo] == 'Funcionario')? 'Função':'Funções' %></center></th>
        </tr>
      </thead>
    
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td href="#"><%= user.name %></td>
            <td><%= user.tipo %></td>
            <td><center><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, user_path(user), id: "Ver usuário", style: "color: black;" %></center></td>
            <% if session[:user_tipo] == 'Administrador' %>
              <td><center><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_user_path(user), id: "Editar usuário", style: "color: black;" %></center></td>
              <td><center><%= link_to '<i class="fa fa-trash"></i>'.html_safe, user_path(user), id: "Deletar usuário", style: "color: black;", method: "delete", data: { confirm: "Você tem certeza?" } %></center></td>
            <% end %>          
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <br>
    <%= link_to '<button type="button" class="btn btn-danger"><i class="fa fa-plus"></i> Adicionar usuário</button>'.html_safe, new_user_path %>
  </center>
</div>
