<div class ="container-fluid">
  <center>
      <% if notice %>
        <center>
          <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= notice %>
          </div>
        </center>
      <% end %>
    <div class="panel panel-green">
      <div class="panel-heading MyFont"><h4>Lista de Usuários</h4></div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Tipo</th>
          <th colspan="3"><center><%= (current_user.tipo == 'Funcionário')? 'Função':'Funções' %></center></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <% @user_del = user %>
          <tr>
            <td href="#"><%= user.name %></td>
            <td><%= user.tipo %></td>
            <td><center><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, user_path(user), id: "Ver usuário", style: "color: black;" %></center></td>
            <% if current_user.tipo == 'Administrador' %>
              <td><center><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_user_path(user), id: "Editar usuário", style: "color: black;" %></center></td>
              <td>
                <center><a  href="" id="Deletar usuário" data-toggle="modal" data-target="#DeleteUser<%= user.id %>" style="color: black;"><i class="fa fa-trash"></i></a></center>
                <!-- Delete User Window -->
                <%= render 'delete_window' %>
              </td>
            <% end %>          
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <br>
    <%= link_to '<button type="button" class="btn btn-danger"><i class="fa fa-plus"></i> Adicionar usuário</button>'.html_safe, new_user_path %>
  </center>
</div>
