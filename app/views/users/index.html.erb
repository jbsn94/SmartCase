<div class ="container-fluid">
  <center>
      <% if notice %>
        <center><div class="alert text-success" role="alert"><p id="notice"><%= notice %></p></div></center>
      <% end %>
    <div class="panel panel-green">
      <div class="panel-heading MyFont"><h4>Lista de Usuários</h4></div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Tipo</th>
          <th colspan="3"><center>Funções</center></th>
        </tr>
      </thead>
    
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.tipo %></td>
            <td><i class="fa fa-search-plus"></i><%= link_to "Ver".html_safe, user %></td>
            <td><i class="fa fa-trash"></i><%= link_to "Deletar".html_safe, user, method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <br>
    <%= link_to '<button type="button" class="btn btn-danger"><i class="fa fa-plus"></i> Adicionar usuário</button>'.html_safe, new_user_path %>
  </center>
</div>
