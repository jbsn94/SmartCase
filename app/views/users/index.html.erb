<div class ="container-fluid">
  <center>
    <h1>Lista de Usuários</h1>
      <% if notice %>
        <center><div class="alert text-success" role="alert"><p id="notice"><%= notice %></p></div></center>
      <% end %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>CPF</th>
          <th>Administrador</th>
          <th colspan="3"><center>Funções</center></th>
        </tr>
      </thead>
    
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.cpf %></td>
            <td><% if user.tipo %>
                  <%= 'Sim' %>
                <% else %>
                  <%= 'Não' %>
                <% end %></td>
            <td><i class="fa fa-search-plus"></i><%= link_to ' Ver', user %></td>
            <td><i class="fa fa-trash"></i><%= link_to ' Excluir', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <button type="button" class="btn btn-danger" onclick="window.location.href='<%= new_user_path %>'"><i class="fa fa-plus"></i> Adicionar usuário</button>
  </center>
</div>
