<div class ="container-fluid">
  <center>
    <div class="form_size_show">
      <% if notice %>
        <center>
          <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= notice %>
          </div>
        </center>
      <% end %>
      <div class="panel panel-primary">
        <div class="panel-heading MyFont"><h4>Informações do Chamado</h4></div>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Titulo</th>
              <th>Local</th>
              <th>Status</th>
              <th><center>Descrição</center></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @order.title %></td>
              <td><%= @order.local %></td>
              <td><%= @order.status %></td>
              <td><div class="text"><%= @order.description %></div></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="btn-group btn-group-xs" role="group" aria-label="...">
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-danger" onclick="window.location.href='<%= edit_order_path(@order) %>'"><i class="fa fa-pencil-square-o"></i> Editar</button>
        </div>
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-danger" onclick="window.location.href='<%= orders_path %>'"><i class="fa fa-undo"></i> Voltar</button>
        </div>
      </div>
    </div>
  </center>
</div>
