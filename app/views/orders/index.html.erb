<div class ="container-fluid">
  <center>
      <% if notice %>
        <center>
          <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= notice %>
          </div>
        </center>
      <% end %>
    <div class="panel panel-primary">
      <div class="panel-heading MyFont"><h4>Lista de Chamados</h4></div>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Chamado</th>
            <th>Local</th>
            <th colspan="3"><center><i class="fa fa-cogs"></i> Funções</center></th>
          </tr>
        </thead>
      
        <tbody>
          <% if session[:user_tipo] == 'Solicitante' %>
            <% @current_order = current_user.orders %>
          <% else %>
            <% @current_order = @orders %>
          <% end %>
          
          <% @current_order.each do |order| %>
            <!-- % @order_del = order % -->
            <tr>
              <td><%= order.title %></td>
              <td><%= order.local %></td>
              <td>
                <center><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, order_path(order), id: "Ver chamado", style: "color: black;" %></center>
                <!-- <center><a  href="<%= order_path(order) %>" style="color: black;"><i class="fa fa-search-plus"></i></a></center> -->
              </td>
              <td>
                <center><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_order_path(order), id: "Editar chamado", style: "color: black;" %></center>
                <!-- <center><a  href="" style="color: black;"><i class="fa fa-pencil"></i></a></center> -->
              </td>
              <% if session[:user_tipo] == 'Administrador' %>
                <td>
                  <center><a  href="" data-toggle="modal" data-target="#DeletarMaquina<%= order.id %>" style="color: black;"><i class="fa fa-trash"></i></a></center>
                  <!-- Machine delete window -->
                  <!-- %= render 'order_del' % -->
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <%= link_to '<button type="button" value ="Adicionar Chamado" class="btn btn-danger"><i class="fa fa-plus"></i> Adicionar Chamado</button>'.html_safe, new_order_path %>
    <!-- <button type="button" class="btn btn-danger" onclick="window.location.href='<%= new_order_path %>'"><i class="fa fa-plus"></i> Adicionar maquina</button> -->
  </center>
</div>