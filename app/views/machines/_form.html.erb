<%= form_for(@machine) do |f| %>
  <% if @machine.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(@machine.errors.count, "error") %> prohibited this machine from being saved:
      <ul>
      <% @machine.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form_size">
  <div class="form-group">
    <%= f.label :tipping, 'Tipo' %><br>
    <%= f.text_field :tipping, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Descrição' %><br>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :model, 'Modelo' %><br>
    <%= f.text_field :model, :class => 'form-control' %>
  </div>
  <div class="actions">
    <div class="btn-group btn-group-xs" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <%= f.submit 'Salvar maquina', :class => 'btn btn-danger' %> 
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-danger" onclick="window.location.href='<%= machines_path %>'"><i class="fa fa-undo"></i> Voltar</button>
      </div>
    </div>
  </div>
</div>
<% end %>
