<%= form_for(@machine) do |f| %>
  <% if @machine.errors.any? %>
    <div id="error_explanation" class="alert alert-danger fonts">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="fa fa-times-circle-o"></i></span></button>
      Atenção, nenhum campo poderá ficar em branco.
    </div>
  <% end %>
<div class="form_size">
  <div class="form-group">
    <%= f.text_field :tipping, :class => 'form-control', placeholder: 'Tipo da maquina', onkeypress: 'return isOnlyNumberAndLettersKey(event)' %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, :class => 'form-control', placeholder: 'Descrição', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.text_field :model, :class => 'form-control', placeholder: 'Modelo da maquina', onkeypress: 'return isOnlyNumberAndLettersKey(event)' %>
  </div>
  <center>
    <div class="actions">
      <div class="btn-group btn-group-xs" role="group" aria-label="...">
        <div class="btn-group" role="group">
          <%= f.submit 'Salvar maquina', :class => 'btn btn-danger' %> 
        </div>
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-danger" onclick="window.location.href='<%= machines_path %>'"><i class="fa fa-undo"></i> Voltar</button>
        </div>
      </div>
    </div>
  </center>
</div>
<% end %>