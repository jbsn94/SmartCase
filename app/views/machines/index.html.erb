<div class ="container-fluid">
  <center>
      <% if notice %>
        <center>
          <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= notice %>
          </div>
        </center>
      <% end %>
    <div class="panel panel-primary">
      <div class="panel-heading MyFont"><h4>Lista de Maquinas</h4></div>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Tipo</th>
            <th>Modelo</th>
            <th colspan="3"><center><i class="fa fa-cogs"></i> Funções</center></th>
          </tr>
        </thead>
      
        <tbody>
          <% @machines.each do |machine| %>
            <tr>
              <td><%= machine.tipping %></td>
              <td><%= machine.model %></td>
              <td>
                <center><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, machine_path(machine), id: "Ver maquina", style: "color: black;" %></center>
                <!-- <center><a  href="<%= machine_path(machine) %>" style="color: black;"><i class="fa fa-search-plus"></i></a></center> -->
              </td>
              <td>
                <center><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_machine_path(machine), id: "Editar maquina", style: "color: black;" %></center>
                <!-- <center><a  href="<%= edit_machine_path(machine) %>" style="color: black;"><i class="fa fa-pencil"></i></a></center> -->
              </td>
              <% if session[:user_tipo] == 'Administrador' %>
                <td>
                  <center><a  href="" id="Deletar usuário" data-toggle="modal" data-target="#DeletarMaquina<%= machine.id %>" style="color: black;"><i class="fa fa-trash"></i></a></center>
                  <!-- Confirmation -->
                  <div class="modal fade" id="DeletarMaquina<%= machine.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                          <center><h3 class="modal-title MyFont2">Você deseja mesmo deletar esta maquina?</h3></center>
                        </div>
                        <div class="modal-footer">
                          <center>
                          <%= link_to '<button type="button" class="btn btn-lg btn-success"><i class="fa fa-check"></i> Sim</button>'.html_safe, machine_path(machine), method: 'delete', id: "Deletar maquina#{machine.id}" %>
                          <button type="button" class="btn btn-lg btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Não</button>
                          </center>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- End confirmation -->
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <%= link_to '<button type="button" value ="Adicionar maquina" class="btn btn-danger"><i class="fa fa-plus"></i> Adicionar maquina</button>'.html_safe, new_machine_path %>
    <!-- <button type="button" class="btn btn-danger" onclick="window.location.href='<%= new_machine_path %>'"><i class="fa fa-plus"></i> Adicionar maquina</button> -->
  </center>
</div>