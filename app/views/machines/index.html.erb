<div class ="container-fluid">
  <center>
      <% if notice %>
        <center><div class="alert text-success" role="alert"><p id="notice"><%= notice %></p></div></center>
      <% end %>
    <div class="panel panel-primary">
      <div class="panel-heading MyFont"><h4>Lista de Maquinas</h4></div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Tipo</th>
            <th>Modelo</th>
            <th colspan="3"><center><i class="fa fa-cogs"></i> Funções</center></th>
          </tr>
        </thead>
      
        <tbody>
          <% @machines.each do |machine| %>
            <tr>
              <td><%= machine.tipping %></td>
              <td><%= machine.model %></td>
              <td>
                <center><%= link_to '<i class="fa fa-search-plus"></i>Ver'.html_safe, machine_path(machine), value: "Ver maquina", style: "color: black;" %></center>
                <!-- <center><a  href="<%= machine_path(machine) %>" style="color: black;"><i class="fa fa-search-plus"></i></a></center> -->
              </td>
              <td>
                <center><%= link_to '<i class="fa fa-pencil"></i>Editar'.html_safe, edit_machine_path(machine), value: "Editar maquina", style: "color: black;" %></center>
                <!-- <center><a  href="<%= edit_machine_path(machine) %>" style="color: black;"><i class="fa fa-pencil"></i></a></center> -->
              </td>
              <td>
                <center><%= link_to '<i class="fa fa-trash"></i>Deletar'.html_safe, machine_path(machine), value: "Deletar maquina", style: "color: black;", method: "delete", data: { confirm: "Você tem certeza?" } %></center>
                <!-- <center><a  href="<%= machine_path(machine) %>" data-confirm="Você tem certeza?" data-method="delete" style="color: black;"><i class="fa fa-trash"></i></a></center> -->
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <%= link_to '<button type="button" value ="Adicionar maquina" class="btn btn-danger"><i class="fa fa-plus"></i> Adicionar maquina</button>'.html_safe, new_machine_path %>
    <!-- <button type="button" class="btn btn-danger" onclick="window.location.href='<%= new_machine_path %>'"><i class="fa fa-plus"></i> Adicionar maquina</button> -->
  </center>
</div>