<div class ="container-fluid">
  <center>
    <h1>Lista de Maquinas</h1>
      <% if notice %>
        <center><div class="alert text-success" role="alert"><p id="notice"><%= notice %></p></div></center>
      <% end %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Tipo</th>
          <th>Descrição</th>
          <th>Modelo</th>
          <th colspan="3"><center>Funções</center></th>
        </tr>
      </thead>
    
      <tbody>
        <% @machines.each do |machine| %>
          <tr>
            <td><%= machine.tipping %></td>
            <td><%= machine.description %></td>
            <td><%= machine.model %></td>
            <td><i class="fa fa-search-plus"></i><%= link_to ' Ver', machine %></td>
            <td><i class="fa fa-trash"></i><%= link_to ' Excluir', machine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <button type="button" class="btn btn-danger" onclick="window.location.href='<%= new_machine_path %>'"><i class="fa fa-plus"></i> Adicionar maquina</button>
  </center>
</div>